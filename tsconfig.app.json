{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.ts",
    "src/**/*.js", 
    "src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*",
    "_old_src/**/*",
    "_*/", 
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
 